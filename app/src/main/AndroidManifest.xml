<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="reciclapp.reciclapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:resizeableActivity="false"
        android:supportsPictureInPicture="false"
        android:screenOrientation="portrait">

        <activity
            android:name=".InicioDeSesion.Inicio"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".SesionRecicladora.SesionRecicladora"
            android:label="@string/title_activity_sesion_recicladora"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".SesionRecicladora.UbicacionRecicladora"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".SesionRecicladora.ModificarRecicladora"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".SesionRecicladora.HorarioRecicladora" />

        <activity
            android:name=".Inicio.InicioPrincipal"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>