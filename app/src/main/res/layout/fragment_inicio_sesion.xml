<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InicioDeSesion.InicioSesion"
    android:background="@color/fondo"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logito"
        android:layout_gravity="center"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etUsuario_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Usuario"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/etContra_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:id="@+id/cbMantenerSesion_InicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No cerrar sesion"
            android:layout_weight="1"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btnLogin_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Entrar_inicio"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:backgroundTint="@color/botonEntrar"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/cabecera_inicioPrin"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/nocuenta"
        android:gravity="bottom"
        />

    <Button
        android:id="@+id/btnRegistro_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/btnRegistro_inicio"
        android:textAllCaps="false"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/botonRegistro"
        />

</LinearLayout>